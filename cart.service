[Unit]
Description = Cart Service
[Service]
User=roboshop
// highlight-start
Environment=REDIS_URL="redis://{{ REDIS_HOST }}:6379"
Environment=MONGO_URL="mongodb://{{ MONGODB_HOST }}:27017/users"
